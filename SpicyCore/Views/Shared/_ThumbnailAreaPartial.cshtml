@model IEnumerable<MenuItem>

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Categories.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-success">
                    @Model.FirstOrDefault().Categories.Name
            </h3>
        </div>

        @foreach (var item in Model)
	    {
		 <div class="border border-info rounded col-12" style="margin:10px 0 10px 0; padding:10px;">
             <div class="row">
                 <div class="col-md-3 col-sm-12">
                     <img src="@item.Image" width="99%" style="border-radius:5px; border: 1px solid #bbb9b9"/>
                 </div>
                 <div class="col-md-9 col-sm-12">
                     <div class="row pr-3">
                         <div class="col-8">
                             <label class="text-primary" style="font-size:16px; color:maroon">@item.Name</label>
                             @if (item.Spicyness == "1")
                             {
                                 <img src="/images/hot1.jpg" title="spicy1" style="width:20%;"/>
                             }
                             @if (item.Spicyness == "2")
                             {
                                 <img src="/images/hot2.jpg" title="spicy2" style="width:20%;"/>
                             }
                             @if (item.Spicyness == "3")
                             {
                                 <img src="/images/hot3.jpg" title="spicy3" style="width:20%;"/>
                             }
                         </div>
                         <div class="col-4 text-right" style="color:maroon">
                             <h4>$@item.Price</h4>
                         </div>
                     </div>
                 
                     <div class="row col-12 text-justify d-none d-md-block">
                         <p>@Html.Raw(item.Description)</p>
                     </div>
                     <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                         <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                     </div>
                 </div>
             </div>
         </div>
	    }
    <div class="p-4"></div>
    </div>
}